{
  "manifest_version": 3,
  "name": "WhatsApp Credibility Realtime",
  "version": "1.1",
  "description": "Realtime credibility highlighting on WhatsApp Web (keyword-weighted).",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_title": "WhatsApp Credibility"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
